<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>edu.neu.ccs.prl.galette</groupId>
        <artifactId>galette-evaluation</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>galette-evaluation-tools</artifactId>
    <properties>
        <java.args> </java.args>
        <flow.report>${project.build.directory}/flow-report.csv</flow.report>
        <!--suppress UnresolvedMavenProperty -->
        <mirror-taint.agentJar>${com.shadow.taint:taint-agent-core:jar}</mirror-taint.agentJar>
        <!--suppress UnresolvedMavenProperty -->
        <phosphor.agentJar>${edu.gmu.swe.phosphor:Phosphor:jar}</phosphor.agentJar>
        <phosphor.java>${project.build.directory}/phosphor/java</phosphor.java>
        <phosphor.cache>${project.build.directory}/phosphor/cache</phosphor.cache>
        <!--suppress UnresolvedMavenProperty -->
        <galette.agentJar>${edu.neu.ccs.prl.galette:galette-agent:jar}</galette.agentJar>
        <galette.java>${project.build.directory}/galette/java/</galette.java>
        <galette.cache>${project.build.directory}/galette/cache</galette.cache>
    </properties>
    <dependencies>
        <dependency>
            <groupId>edu.neu.ccs.prl.galette</groupId>
            <artifactId>galette-agent</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.shadow.taint</groupId>
            <artifactId>taint-agent-core</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>edu.gmu.swe.phosphor</groupId>
            <artifactId>Phosphor</artifactId>
            <version>0.1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>edu.neu.ccs.prl.galette</groupId>
            <artifactId>galette-benchmark</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>properties</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>java</id>
            <activation>
                <jdk>[9,)</jdk>
            </activation>
            <properties>
                <java.args>--add-exports java.base/jdk.internal.misc=ALL-UNNAMED</java.args>
            </properties>
        </profile>
        <profile>
            <id>mirror-taint</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>mirror-taint</id>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
                                <phase>integration-test</phase>
                                <configuration>
                                    <reuseForks>false</reuseForks>
                                    <argLine>
                                        -Dflow.report.append=true
                                        -Dflow.report=${flow.report}
                                        -Dflow.manager=edu.neu.ccs.prl.galette.eval.MirrorTaintTagManager
                                        -Xbootclasspath/a:${mirror-taint.agentJar}
                                        -javaagent:${mirror-taint.agentJar}
                                        ${java.args}
                                    </argLine>
                                    <dependenciesToScan>
                                        <scan>edu.neu.ccs.prl.galette:galette-benchmark</scan>
                                    </dependenciesToScan>
                                    <excludes>
                                        <exclude>META-INF/**/*</exclude>
                                    </excludes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>phosphor</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>edu.gmu.swe.phosphor</groupId>
                        <artifactId>phosphor-instrument-maven-plugin</artifactId>
                        <version>0.1.0-SNAPSHOT</version>
                        <executions>
                            <execution>
                                <id>instrument</id>
                                <goals>
                                    <goal>instrument</goal>
                                </goals>
                                <phase>process-test-resources</phase>
                                <configuration>
                                    <outputDirectory>${phosphor.java}</outputDirectory>
                                    <linkedCaches>
                                        <linkedCache>${phosphor.cache}</linkedCache>
                                    </linkedCaches>
                                    <options>
                                        <forceUnboxAcmpEq>true</forceUnboxAcmpEq>
                                        <withEnumsByValue>true</withEnumsByValue>
                                        <quiet>true</quiet>
                                        <serialization>true</serialization>
                                        <jvmModules>ALL-MODULE-PATH</jvmModules>
                                    </options>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>phosphor</id>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
                                <phase>integration-test</phase>
                                <configuration>
                                    <jvm>${phosphor.java}/bin/java</jvm>
                                    <reuseForks>false</reuseForks>
                                    <argLine>
                                        -Dflow.report.append=true
                                        -Dflow.report=${flow.report}
                                        -Dflow.manager=edu.neu.ccs.prl.galette.eval.PhosphorTagManager
                                        -DphosphorCacheDirectory=${phosphor.cache}
                                        -Xbootclasspath/a:${phosphor.agentJar}
                                        -javaagent:${phosphor.agentJar}=enum,acmpeq
                                        ${java.args}
                                    </argLine>
                                    <dependenciesToScan>
                                        <scan>edu.neu.ccs.prl.galette:galette-benchmark</scan>
                                    </dependenciesToScan>
                                    <excludes>
                                        <exclude>META-INF/**/*</exclude>
                                    </excludes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>galette</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>edu.neu.ccs.prl.galette</groupId>
                        <artifactId>galette-maven-plugin</artifactId>
                        <version>${project.version}</version>
                        <executions>
                            <execution>
                                <id>instrument</id>
                                <goals>
                                    <goal>instrument</goal>
                                </goals>
                                <phase>process-test-resources</phase>
                                <configuration>
                                    <outputDirectory>${galette.java}</outputDirectory>
                                    <linkedCaches>
                                        <linkedCache>${galette.cache}</linkedCache>
                                    </linkedCaches>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>galette</id>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
                                <phase>integration-test</phase>
                                <configuration>
                                    <jvm>${galette.java}/bin/java</jvm>
                                    <argLine>
                                        -Dflow.report.append=true
                                        -Dflow.report=${flow.report}
                                        -Dflow.manager=edu.neu.ccs.prl.galette.bench.extension.GaletteTagManager
                                        -Dgalette.cache=${galette.cache}
                                        -Xbootclasspath/a:${galette.agentJar}
                                        -javaagent:${galette.agentJar}
                                        ${java.args}
                                    </argLine>
                                    <dependenciesToScan>
                                        <scan>edu.neu.ccs.prl.galette:galette-benchmark</scan>
                                    </dependenciesToScan>
                                    <excludes>
                                        <exclude>META-INF/**/*</exclude>
                                    </excludes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>